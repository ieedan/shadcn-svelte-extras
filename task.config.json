{
	"$schema": "https://getbizi.dev/schemas/task.config.json",
	"tasks": {
		"dev": {
			"tasks": {
				"registry": {
					"color": "blue",
					"command": "pnpm registry:dev"
				},
				"generate-llms": {
					"color": "yellow",
					"command": "pnpm generate-llms"
				},
				"app": {
					"color": "green",
					"command": "pnpm vite dev"
				}
			}
		},
		"ci": {
			"tasks": {
				"format": {
					"command": "pnpm format"
				},
				"lint": {
					"command": "pnpm lint",
					"dependsOn": ["ci:format"]
				},
				"check": {
					"command": "pnpm check"
				}
			}
		}
	}
}
